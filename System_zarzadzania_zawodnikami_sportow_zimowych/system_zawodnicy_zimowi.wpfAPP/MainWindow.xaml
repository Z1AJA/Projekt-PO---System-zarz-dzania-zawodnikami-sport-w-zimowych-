<Window x:Class="system_zawodnicy_zimowi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Manager Sportów Zimowych v4.0 (Stable)" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TabControl>

            <TabItem Header="ZARZĄDZANIE ZAWODNIKAMI">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="Lista Zawodników" Grid.Column="0" Margin="0,0,10,0">
                        <DataGrid x:Name="ListaDatagrid" AutoGenerateColumns="False" IsReadOnly="True" 
                                  SelectionMode="Single" SelectionChanged="ListaDatagrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                                <DataGridTextColumn Header="Wiek" Binding="{Binding Wiek}" Width="40"/>
                                <DataGridTextColumn Header="Ranga" Binding="{Binding Ranga}" Width="70"/>
                                <DataGridTextColumn Header="Klub" Binding="{Binding KlubNazwa}" Width="100"/>
                                <DataGridTextColumn Header="Pkt" Binding="{Binding Punkty}" Width="50" FontWeight="Bold"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <ScrollViewer Grid.Column="1">
                        <StackPanel>
                            <GroupBox Header="Nowy Zawodnik" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Typ zawodnika:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                    <ComboBox x:Name="CmbTyp" SelectedIndex="0" Margin="0,0,0,10" SelectionChanged="CmbTyp_SelectionChanged">
                                        <ComboBoxItem Content="Narciarz Alpejski"/>
                                        <ComboBoxItem Content="Snowboardzista"/>
                                    </ComboBox>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Imię:" Foreground="Gray"/>
                                            <TextBox x:Name="TxtImie"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="0,0,5,0">
                                            <TextBlock Text="Nazwisko:" Foreground="Gray"/>
                                            <TextBox x:Name="TxtNazwisko" TextChanged="TxtNazwisko_TextChanged"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Wiek:" Foreground="Gray"/>
                                            <TextBox x:Name="TxtWiek"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Content="Dodaj Zawodnika" Click="BtnDodaj_Click" Margin="0,15,0,0" Height="30"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Transfer" Padding="5" Margin="0,0,0,10" BorderBrush="Blue">
                                <StackPanel>
                                    <TextBlock Text="Dostępne kluby:" FontSize="10"/>
                                    <ComboBox x:Name="CmbKlubyWybior" DisplayMemberPath="Nazwa" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="Przypisz" Click="BtnPrzypiszKlub_Click" Margin="0,0,2,0"/>
                                        <Button Grid.Column="1" Content="Wypisz" Click="BtnWypiszKlub_Click" Margin="2,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Wprowadź Wynik" Padding="5" BorderBrush="Green">
                                <StackPanel>
                                    <TextBlock Text="Wybierz zawody z bazy:" FontSize="10"/>
                                    <ComboBox x:Name="CmbZawodyWybor" DisplayMemberPath="Nazwa" 
                                              Margin="0,0,0,5" SelectionChanged="CmbZawodyWybor_SelectionChanged"/>

                                    <TextBox x:Name="TxtNazwaZawodow" IsReadOnly="True" Background="#EEE" Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="2">
                                            <TextBlock Text="Miejsce"/>
                                            <TextBox x:Name="TxtMiejsce"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="2">
                                            <TextBlock Text="Trudność"/>
                                            <TextBox x:Name="TxtTrudnosc" IsReadOnly="True" Background="#EEE"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Margin="2">
                                            <TextBlock Text="Pkt Baz"/>
                                            <TextBox x:Name="TxtPunktyBazowe" IsReadOnly="True" Background="#EEE"/>
                                        </StackPanel>
                                    </Grid>

                                    <DatePicker x:Name="DateDataZawodow" SelectedDate="{x:Static sys:DateTime.Today}" Margin="0,5,0,0"/>

                                    <Button Content="Zatwierdź Wynik" Click="BtnDodajWynik_Click" Margin="0,10,0,0" Height="30" FontWeight="Bold" Background="#DFD" RenderTransformOrigin="2.287,72.779"/>
                                </StackPanel>
                            </GroupBox>

                            <Border Background="#F5F5F5" Padding="10" Margin="0,15,0,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock x:Name="TxtWybranyInfo" Text="Brak wyboru" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <ProgressBar x:Name="PasekPostepu" Height="15" Minimum="0" Maximum="20000" Margin="0,5"/>
                                    <TextBlock x:Name="TxtPunktyPasek" Text="0 / 20000 pkt" HorizontalAlignment="Center" FontSize="10"/>
                                    <TextBlock x:Name="TxtRangaStopka" Text="---" HorizontalAlignment="Center" Foreground="OrangeRed" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="BAZA KLUBÓW">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="GridKluby" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*"/>
                            <DataGridTextColumn Header="Min. Punkty" Binding="{Binding MinimalnePunkty}"/>
                            <DataGridTextColumn Header="Limit" Binding="{Binding LimitMiejsc}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <GroupBox Header="Dodaj Klub" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Nazwa:"/>
                                <TextBox x:Name="TxtKlubNazwa" Margin="0,0,0,5"/>
                                <TextBlock Text="Min Punkty:"/>
                                <TextBox x:Name="TxtKlubMinPkt" Text="0" Margin="0,0,0,5"/>
                                <TextBlock Text="Limit miejsc:"/>
                                <TextBox x:Name="TxtKlubLimit" Margin="0,0,0,5"/>
                                <TextBlock Text="Max Wiek:"/>
                                <TextBox x:Name="TxtKlubMaxWiek" Margin="0,0,0,10"/>
                                <Button Content="Utwórz" Click="BtnUtworzKlub_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="BAZA ZAWODÓW">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="GridZawody" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="GridZawody_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa Zawodów" Binding="{Binding Nazwa}" Width="*"/>
                            <DataGridTextColumn Header="Trudność" Binding="{Binding Trudnosc}"/>
                            <DataGridTextColumn Header="Pkt Bazowe" Binding="{Binding PunktyBazowe}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <GroupBox Header="Zdefiniuj Szablon" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Nazwa:"/>
                                <TextBox x:Name="TxtDefZawodyNazwa" Margin="0,0,0,5"/>
                                <TextBlock Text="Trudność (1-5):"/>
                                <TextBox x:Name="TxtDefZawodyTrudnosc" Margin="0,0,0,5"/>
                                <TextBlock Text="Punkty Bazowe:"/>
                                <TextBox x:Name="TxtDefZawodyPkt" Margin="0,0,0,10"/>
                                <Button Content="Dodaj do Bazy" Click="BtnUtworzZawody_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>