<Window x:Class="system_zawodnicy_zimowi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Zawodników - Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Baza Zawodników" Grid.Column="0" Margin="0,0,10,0">
                <DataGrid x:Name="ListaDatagrid" 
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    SelectionMode="Single"
                    SelectionChanged="ListaDatagrid_SelectionChanged"
                    BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                        <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                        <DataGridTextColumn Header="Wiek" Binding="{Binding Wiek}" Width="50"/>
                        <DataGridTextColumn Header="Ranga" Binding="{Binding Ranga}" Width="80"/>
                        <DataGridTextColumn Header="Dyscyplina" Binding="{Binding Dyscyplina}" Width="120"/>
                        <DataGridTextColumn Header="Klub" Binding="{Binding KlubNazwa}" Width="100"/>
                        <DataGridTextColumn Header="Punkty" Binding="{Binding Punkty}" Width="60" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <ScrollViewer Grid.Column="1">
                <StackPanel>

                    <GroupBox Header="Rejestracja Zawodnika" Padding="10" Margin="0,0,0,15" BorderBrush="#FF444444">
                        <StackPanel>
                            <TextBlock Text="Wybierz typ:" FontWeight="SemiBold"/>
                            <ComboBox x:Name="CmbTyp" Margin="0,0,0,10" Padding="5">
                                <ComboBoxItem Content="Narciarz Alpejski" IsSelected="True"/>
                                <ComboBoxItem Content="Snowboardzista"/>
                            </ComboBox>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Imię:"/>
                                    <TextBox x:Name="TxtImie" Margin="0,0,0,10"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Nazwisko:"/>
                                    <TextBox x:Name="TxtNazwisko" Margin="0,0,0,10"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Wiek:"/>
                            <TextBox x:Name="TxtWiek" Margin="0,0,0,15" Width="50" HorizontalAlignment="Left"/>

                            <Button Content="DODAJ DO BAZY" Click="BtnDodaj_Click" Height="35" Background="#FF3399FF" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Transfery Klubowe" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Wybrany zawodnik:" Foreground="Gray"/>
                            <TextBlock x:Name="TxtWybranyInfo" Text="-- brak --" FontWeight="Bold" Margin="0,0,0,10"/>

                            <TextBlock Text="Nazwa Klubu:"/>
                            <TextBox x:Name="TxtNazwaKlubu" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Przypisz" Click="BtnPrzypiszKlub_Click" Height="30" Background="#DDFFDD"/>
                                <Button Grid.Column="2" Content="Wypisz" Click="BtnWypiszKlub_Click" Height="30" Background="#FFDDDD"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Separator Grid.Row="1" Margin="0,10"/>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="15" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="ZAWODNIK" FontSize="10" Foreground="Gray"/>
                    <TextBlock x:Name="TxtImieStopka" Text="Wybierz zawodnika" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtWiekStopka" Text="-- lat" FontSize="12" Foreground="DarkSlateGray"/>
                </StackPanel>

                <Grid Grid.Column="1" VerticalAlignment="Center">
                    <ProgressBar x:Name="PasekPostepu" Height="25" Minimum="0" Maximum="1000" Value="0" Foreground="#FF3399FF"/>
                    <TextBlock x:Name="TxtPunktyPasek" Text="0 pkt" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontWeight="SemiBold"/>
                </Grid>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,0" MinWidth="100">
                    <TextBlock Text="STATUS" FontSize="10" Foreground="Gray"/>
                    <TextBlock x:Name="TxtRangaStopka" Text="---" FontWeight="Bold" Foreground="#FF5500"/>
                    <TextBlock x:Name="TxtDyscyplinaStopka" Text="---" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>